@using System.Data
@model DataSet
@using Bigprofits.Common;
@{
    ViewData["Title"] = "Inbox-History";
    Layout = "~/Areas/Admin/Views/Shared/_AALayout.cshtml";
}

<div class="page-heading">
    <!-- Basic Tables start -->
    <section class="section">
        <div class="card">
            <div class="card-header bg-primary" style="background: #435ebe;color: white;padding: 15px;">
                Inbox Histroy
            </div>
            <div class="card-body mt-3 overflow-auto">
                <table class="table table-responsive text-nowrap" id="datatable">
                    <thead>
                        <tr>
                            <th>
                                Sno
                            </th>
                            <th>
                                FromBy
                            </th>
                            <th>
                               Member Name
                            </th>
                            <th>
                                Subject
                            </th>
                            <th>
                                Status
                            </th>
                            <th>
                                Request Date
                            </th>
                           
                    </thead>
                    <tbody>
                        @{
                            int sno2 = 1;
                        }

                        @foreach (DataRow row in Model.Tables[0].Rows)
                        {
                            <tr>
                                <td>@sno2</td>
                                <td>@row["FromBy"]</td>
                                <td>@row["memName"]</td>
                                <td>@row["MySubject"]</td>
                                <td>@row["Status"]</td>
                                <td>@row["SDate"]</td>
                                

                            </tr>
                            sno2++;
                        }

                    </tbody>
                </table>
            </div>
        </div>

    </section>
    <!-- Basic Tables end -->
</div>
