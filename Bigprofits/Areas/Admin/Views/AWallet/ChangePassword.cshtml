@model Bigprofits.Models.UserMaster

@{
    ViewData["Title"] = "ChangePassword";
    Layout = "~/Areas/Admin/Views/Shared/_AALayout.cshtml";
}

<div style="text-align: center;padding: 5px;color: #b7114e;font-weight: 900;" id="passmsg"></div>

<div class="row justify-content-center">
    <div class="col-12 col-sm-5 mt-5">
        <div class="card shadow mb-4">
            <div class="card-header bg-info py-3">
                <h6 class="m-0 font-weight-bold text-white"> CHANGE PASSWORD <span> </span></h6>
            </div>
            <div class="card-body">
                <div class="">
                    <input type="hidden" asp-for="Id" />

                    <div class="form-group">
                        <label class="form-label">Old Password</label>
                        <input id="txtoldpass" required class="form-control" />
                        <div class="text-danger"></div>
                    </div>

                    <div class="form-group">
                        <label class="form-label">New Password</label>
                        <input id="txtnewpass" required class="form-control" />
                        <div class="text-danger"></div>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Confirm Password</label>
                        <input id="txtconfmpass" required class="form-control" />
                        <div class="text-danger"></div>
                    </div>

                    <div class="form-group" style="text-align:center">
                        <input type="submit" id="btnSubmit" value="Save" class="btn btn-primary" />
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $("#btnSubmit").on("click", function () {
            changepasswordjs()
        })

        function changepasswordjs() {
            var op = $("#txtoldpass").val();
            var np = $("#txtnewpass").val();
            var cp = $("#txtconfmpass").val();
            if (np != cp) {
                $("#txtnewpass").val("");
                $("#txtconfmpass").val("");
                $("#txtoldpass").val("");
                $("#passmsg").text("New And Confirm Password Doesn't Match");
            }
            else {
                $("#btnSubmit").attr("disabled", true).val("loading...")

                $.ajax({
                    url: "/britglbl253adpnl/change-password",
                    method: "post",
                    data: { op: op, np: np, cp: cp },
                    dataType: "Json",
                    success: function (data) {
                        console.log(data);
                        $("#txtnewpass").val("");
                        $("#txtconfmpass").val("");
                        $("#txtoldpass").val("");
                        $("#passmsg").text(data);

                        $("#btnSubmit").attr("disabled", false).val("Save")
                    }
                })
            }
        }
    </script>
}
