@model Bigprofits.Models.MemberInfo

@{
    ViewData["Title"] = "ProfileImageUpload";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<div>
    <div class="content-page">
        <div class="content">
            <div class="container-fluid">

                <div class="col-md-4">
                </div>
                <div class="col-md-8">
                    <form asp-controller="Privacy" asp-action="ProfileImageUpload" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="All" style="background:#ffd800" class="text-danger"></div>
                        <dl class="row">
                            <dt class="col-sm-2 text-white">
                                @Html.DisplayNameFor(model => model.ProfileImage)
                            </dt>
                            <dd class="col-sm-10">
                                <img src="~/@Url.Content(@Model.ProfileImage)" style="height: 160px;width: 160px;" alt="No Image Found" />
                            </dd>
                        </dl>
                        <br />
                        @* <div class="form-group">
                            <input type="file" required asp-for="ProfileFile" accept=".png,.jpg,.jpeg" class="btn bg-primary text-white" />
                            <span asp-validation-for="ProfileFile" class="text-danger"></span>
                        </div> *@

                        <br />
                        <div class="form-group">
                            <input type="submit" value="Upload" class="btn btn-primary" />
                        </div>
                        <br />
                        <div>
                            @*<a asp-action="Edit" asp-route-id="@Model.MemId">Edit</a> |*@
                            <a asp-controller="Home" asp-action="Index">Back to Home</a>
                        </div>
                    </form>
                </div>
                <div class="col-md-2">
                </div>

            </div>
        </div>
    </div>


</div>
@section Scripts {

}
