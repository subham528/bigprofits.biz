@using System.Data
@model DataSet
@using Bigprofits.Common;
@{
    ViewData["Title"] = "Withdrwal History";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12 col-sm-12">
        <div class="card ">
            <div class="card-header">
                <h3 class="card-title mb-0"> WithdrawalHistory </h3>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="data-table" class="table table-bordered text-nowrap mb-0">
                        <thead>
                            <tr>
                                <th>
                                    Sno
                                </th>
                                <th>
                                   Withdrawal
                                </th>
                                @* <th>
                                  Topup Wallet
                                </th> *@
                                <th>
                                    Final Amount
                                </th>
                              
                                <th>
                                    Date
                                </th>
                                <th>
                                   Payable Amount
                                </th>
                                <th>Type</th>
                                <th>
                                 Status
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int sno2 = 1;
                            }

                            @foreach (DataRow row in Model.Tables[0].Rows)
                            {
                                <tr>
                                    <td>@sno2</td>
                                    
                                    <td>@("$" + Convert.ToDecimal(row["withdrawal"]).ToString("0.00"))</td>
                                    @* <td>@("$" + Convert.ToDecimal(row["directIncome"]).ToString("0.00"))</td> *@
                                    <td>@("$" + Convert.ToDecimal(row["finalAmount"]).ToString("0.00"))</td>
                                    <td>@row["WDLDate"]</td>


                                    <td>@("$" + Convert.ToDecimal(row["finalAmount"]).ToString("0.00"))</td>
                                    <td>@row["wtype"]</td>
                                    <td>
                                        @if (@row["status"].ToString() == "0")
                                        {
                                            <p class="text-danger">PROCESSING</p>
                                        }
                                        else
                                        {
                                            <p class="text-success">APPROVE</p>
                                        }
                                    </td>

                                </tr>
                                sno2++;
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div><!-- COL END -->
</div><!-- ROW-5 END -->
