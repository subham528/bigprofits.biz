@model IEnumerable<Bigprofits.Models.FundAmount>
@{
    ViewData["Title"] = "TransferFund";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">

    <div class="col-xl-4 col-lg-6 col-sm-6">
        <div class="widget-stat card ">
            <div class="card-body p-4">
                <div class="media">
                    <span class="mr-3">
                        <i class="la la-rupee"></i>
                    </span>
                    <div class="media-body">
                        <p class="mb-1">Available Wallet</p>
                        <h4>@ViewBag.data.AvailableWallet.ToString("0.00")</h4>
                        <div class="progress mb-2 bg-secondary">
                            <div class="progress-bar progress-animated bg-info" style="width: 30%"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div style="text-align: center;padding: 5px;color: #b7114e;font-weight: 900;" id="showmsg"></div>


<div class="row justify-content-center">
    <div class="col-10 col-md-4">
        <!-- Start-->
        <div class="card shadow mb-4 ">
            <div class="card-header py-3">

                <h6 class="m-0 font-weight-bold"> Transfer Fund <span> </span></h6>
            </div>
            <div class="card-body">
                <div class="text-center" style="color:red;" id="UserName"> </div>
                <div class="">

                    <div asp-validation-summary="All" class="text-danger"></div>

                    <div class="form-group">
                        <label class="control-label">Member ID</label>
                        <input id="member" required class="form-control text-uppercase" />
                    </div>

                    <div class="form-group">
                        <label class="control-label">Enter Amount</label>
                        <input type="text" id="txtAmount" class="form-control" placeholder="Min 100 & mul of 1" />
                    </div>

                    <div class="form-group mt-3 " style="text-align:center" id="topbtn">
                        <input type="submit" value="Transfer" id="btnsubmit" class="btn bg-primary text-white" />
                    </div>

                    <div class="form-group mt-3 " style="text-align:center" id="processbtn">
                        <p style="text-align: center;padding: 5px;color: #b7114e;font-weight: 900;"> Processing...  </p>
                    </div>
                    @* -------------------------- form method End ------------------------------------*@

                    @* </form>*@


                </div>
            </div>
        </div>
        <!-- End-->
    </div>

    <div class="col-12 col-sm-12">
        <div class="card ">
            <div class="card-header">
                <h3 class="card-title mb-0"> Transaction History </h3>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="data-table" class="table table-bordered text-nowrap mb-0">
                        <thead>
                            <tr>
                                <th>Sno</th>
                                <th>Member</th>
                                <th>By Member</th>
                                <th>Amount</th>
                                <th>Date</th>
                                <th>Details</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int sno = 0;
                            }
                            @foreach (var item in Model)
                            {
                                sno++;
                                <tr>
                                    <td>@sno</td>
                                    <td>@item.MemberId</td>
                                    <td>@item.ByMemberId</td>
                                    <td>@item.Amount!.Value.ToString("0")</td>
                                    <td>@item.Fdate!.Value.ToString("dd/MM/yyyy hh:mm tt")</td>
                                    <td>@(item.ByMemberId == ViewBag.member ? Html.Raw("<span class='text-danger'>Transfer</span>") : Html.Raw("<span class='text-success'>CREDIT</span>"))</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div><!-- COL END -->


</div>

@section Scripts {

    <script>

        $(function () {
            $("#topbtn").show()
            $("#processbtn").hide()
        });

    </script>

    <script>

        $("#btnsubmit").on("click", function () {
            var member = ""
            var amount = $("#txtAmount").val().trim()
            var member = $("#member").val().trim()

            if (member == "") { $("#showmsg").text("Plese enter valid memberid"); }
            else if (amount == "") $("#showmsg").text("Please enter amount first");
            else if (isNaN(amount)) $("#showmsg").text("Please enter a valid amount");
            else if (parseFloat(amount) < 10 || parseFloat(amount) % 1 != 0) $("#showmsg").text("Amount should be minimum 100 and in multiple of 1");
            else {
                $("#topbtn").hide()
                $("#processbtn").show()

                $.ajax({
                    url: "/Wallet/TransferFund",
                    method: "post",
                    data: { userId: member, amount: amount },
                    dataType: "Json",
                    success: function (data) {
                        console.log(data)

                        Swal.fire({
                            icon: data.includes("Failed!") ? 'error' : 'success',
                            title: data.includes("Failed!") ? 'Transferr Fund Failed!' : 'Transferr Fund Successfull!',
                            text: data,
                        }).then(() => {
                            location.href = location.pathname;
                        })
                    }
                })

            }
        })



        $("#member").keyup(function () {
            if ($(this).val() != "") {
                IsSponsorExist($(this).val());
            }
            else $("#UserName").val("");
        })
        function IsSponsorExist(memberId) {
            try {
                $.ajax({
                    url: "/TopUp/GetMemberName/",
                    method: 'post',
                    data: { memberId: memberId },
                    dataType: "text",
                    success: function (data) {
                        console.log(data);
                        $("#UserName").text(data);
                    }
                });
            } catch (e) {
                console.log(e)
            }
        }
    </script>
}