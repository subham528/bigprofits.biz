                                                            <div class="card p-card position-relative">
                                                                <a data-bs-target="#exampleModalToggle_${product.ProductId}" data-bs-toggle="modal">
                                                                    <img src="/${product.ProductImage}" alt="${product.ProductName}" />
                                                                    <div class="dish-list-text card-body p-2">
                                                                        <h4 class="card-title">${product.ProductName}</h4>
                                                                        <input type="hidden" value="${product.ProductId}" />
                                                                        <h5 class="card-price">₹${product.Price.toFixed(2)}</h5>
                                                                        <h5 class="card-weight">BV: ${product.ProductBv.toFixed(2)}</h5>
                                                                        <h5 class="card-weight">${product.Weight}</h5>
                                                                    </div>
                                                                </a>
                                                                <a href="/account/add-cart?ProductId=${product.ProductId}" class="btn btn-primary"><i class="fa fa-shopping-cart"></i> Add to cart</a>
                                                            </div>
                                                        </div>
                                                        `;
            });
            $("#productList").html(prodHtml)
        }
    </script>
}



