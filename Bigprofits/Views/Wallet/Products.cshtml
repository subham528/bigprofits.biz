@using System.Data
@{
    ViewData["Title"] = "TopUp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    /* Navbar Styling */
    .custom-navbar {
        display: flex;
        flex-wrap: wrap;
        justify-content: center; /* Center alignment for better UX */
        gap: 10px; /* Space between category boxes */
        padding: 10px;
        background-color: #f3f3f3;
    }

    .custom-menu {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
    }

    /* Dropdown Box */
    .custom-dropdown {
        position: relative;
        border: 1px solid #6D965E;
        border-radius: 6px;
        padding: 10px;
        text-align: center;
        background-color: #ffffff;
        box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
        cursor: pointer;
        transition: background-color 0.3s ease, width 0.3s ease;
        flex: 1 1 auto; /* Allow categories to grow/shrink dynamically */
        min-width: 160px; /* Minimum width for small categories */
        max-width: 220px; /* Maximum width for large categories */
    }

        /* Default Active Category */
        .custom-dropdown.active {
            background-color: #2196f3;
            color: #fff;
        }

        /* Category Icon */
        .custom-dropdown .category-icon {
            font-size: 20px;
            margin-right: 10px;
            color: #6D965E;
        }

        /* Category Link */
        .custom-dropdown .custom-nav-link {
            text-decoration: none;
            color: black;
            font-size: 14px;
            white-space: nowrap; /* Prevent wrapping of category name */
        }

        /* Dropdown Content */
        .custom-dropdown .custom-dropdown-content {
            display: none; /* Hidden by default */
            position: absolute;
            top: 100%;
            left: 0;
            background-color: #fff;
            border: 1px solid #ddd;
            border-radius: 4px;
            z-index: 1;
            min-width: 160px; /* Fixed width for dropdown content */
            box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }

        /* Show on Hover */
        .custom-dropdown:hover .custom-dropdown-content {
            display: block;
        }

    /* Subcategory Links */
    .custom-dropdown-content a {
        color: black;
        padding: 8px 12px;
        display: block;
        text-decoration: none;
        font-size: 13px;
    }

        .custom-dropdown-content a:hover {
            background-color: #2196f3;
        }

    /* Mobile Responsiveness */
    @@media screen and (max-width: 768px) {
        .custom-navbar {
            display: block; /* Stack the categories vertically on mobile */
            text-align: center;
        }

        .custom-menu {
            display: flex;
            flex-direction: column;
            align-items: center;
            width: 100%;
        }

        .custom-dropdown {
            width: 90%; /* Full width for mobile view */
            margin-bottom: 10px; /* Space between categories */
        }

        .category-icon {
            font-size: 18px; /* Smaller icon size for mobile */
        }

        .custom-nav-link {
            font-size: 16px; /* Adjust font size for better readability */
        }
        /* Ensure the dropdown content fits well on mobile */
        .custom-dropdown-content {
            min-width: 100%; /* Full-width dropdown on mobile */
        }
    }
</style>

@if (TempData["msg"] != null)
{
    <div class="alert alert-success mb-3">
        <strong>Success!!</strong>@TempData["msg"]
    </div>
}
@if (TempData["error"] != null)
{
    <div class="alert alert-danger mb-3">
        <strong>Error!!</strong>@TempData["error"]
    </div>
}
