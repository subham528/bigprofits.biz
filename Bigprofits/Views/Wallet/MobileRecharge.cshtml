
@using System.Data
@model DataSet
@using Newtonsoft.Json;
@using Bigprofits.Common;
@{
    ViewData["Title"] = "MobileRecharge";
    Layout = "~/Views/Shared/_Layout.cshtml";

    dynamic income = JsonConvert.DeserializeObject(ViewBag.SpMember)[0];
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Recharge Form</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/2.1.2/sweetalert.min.css">
    <style>
        .btnDisable {
            position: relative;
            z-index: -1;
            opacity: 0.5;
        }

        .selected {
            background-color: #f0f0f0;
        }

        .pkgBtn ul {
            list-style: none;
            padding: 0;
        }

        .pkgBtn li {
            display: inline-block;
            margin: 10px;
        }

        .pkgBtn img {
            width: 80px;
            height: 80px;
            display: block;
            margin: 0 auto;
        }

        .pkgBtn p {
            text-align: center;
            margin: 5px 0 0 0;
            font-size: 14px;
        }
    </style>
</head>
<body>

    <div class="container mt-5">
        <div class="row">
            <div class="col-md-12 text-center mb-3">
                <div id="divMsg" class="text-danger"></div>
            </div>

            <div class="col-md-6 offset-md-3">
                <div class="card">
                    <div class="card-body p-2">
                        <div class="mb-3 d-flex justify-content-around text-primary p-3">
                            <label class="text-center fs-16">
                                Usable USD
                                <br />
                                <span id="lblAvailable">@income.usableUsd</span>
                            </label>
                            <label class="text-center fs-16 text-success">
                                Usable INR
                                <br />
                                <span id="lblAvailableInr">@income.usableInr</span>
                            </label>
                        </div>

                        <div class="mb-3">
                            <div class="pkgBtn">
                                <ul id="operatorList">
                                    <!-- JavaScript will dynamically populate this list -->
                                </ul>
                            </div>
                        </div>

                        <div id="form" class="d-none">
                            <div class="mb-3">
                                <label>Mobile No - <span id="lblBiller" class="text-warning"></span></label>
                                <input type="text" id="txtPhoneNo" class="form-control" />
                            </div>

                            <div class="mb-3">
                                <label>Enter Amount (INR)</label>
                                <input type="text" id="txtAmount" class="form-control" />
                            </div>

                            <div class="mb-3 text-center divBtn">
                                <button id="btnTransfer" class="btn btn-primary" onclick="return validate()">RECHARGE</button>
                                <p id="loadingMsg" class="d-none">Loading...</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <input type="hidden" id="txtType" />
    <input type="hidden" id="txtBillerId" />

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/2.1.2/sweetalert.min.js"></script>

    <script>
        var billerId = "";

        function setBillerId(biller) {
            billerId = biller;
            $("#txtBillerId").val(biller);

            $(".pkgBtn li").removeClass("selected");
            $(".pkgBtn li[data-id='" + biller + "']").addClass("selected");
            $("#form").removeClass("d-none");
            $("#lblBiller").text($(".pkgBtn li[data-id='" + biller + "'] p").text());
        }

        const operators = [
            { billerId: 'ATP', iconUrl: '/img/ATP.svg', billerName: 'Airtel' },
            { billerId: 'RJP', iconUrl: '/img/RJP.svg', billerName: 'Reliance Jio' },
            { billerId: 'VFP', iconUrl: '/img/VFP.svg', billerName: 'Vi' },
            { billerId: 'BGP', iconUrl: '/img/BGP.svg', billerName: 'BSNL' },
            { billerId: 'MMP5', iconUrl: '/img/MMP.svg', billerName: 'MTNL' },
        ];

        const operatorList = document.getElementById('operatorList');
        operators.forEach(operator => {
            const li = document.createElement('li');
            li.dataset.id = operator.billerId;
            li.innerHTML = `
                        <a href="javascript:;" onclick="setBillerId('${operator.billerId}')">
                            <img src="${operator.iconUrl}" alt="${operator.billerName}" />
                            <p>${operator.billerName}</p>
                        </a>
                    `;
            operatorList.appendChild(li);
        });

        function validate() {
            var number = $("#txtPhoneNo").val().trim();
            var amount = $("#txtAmount").val().trim();

            if (number === "" || amount === "") {
                showSweetAlert("warning", "Empty Fields!", "All fields are mandatory!");
                return false;
            } else if (isNaN(amount)) {
                showSweetAlert("warning", "Invalid Amount!", "Invalid Amount! Please enter a valid amount");
                return false;
            } else if (parseFloat(amount) < 10) {
                showSweetAlert("warning", "Invalid Amount!", "Invalid Amount! Minimum amount 10 INR");
                return false;
            } else {
                $("#btnTransfer").addClass("btnDisable");
                $("#loadingMsg").removeClass("d-none");

                $.ajax({
                    url: '/account/INSP_Utility_Payment',
                    method: 'post',
                    data: { number: number, amount: amount, billerId: billerId },
                    dataType: 'json',
                    success: function (data) {
                        console.log(data);
                        $("#loadingMsg").addClass("d-none");
                        $("#btnTransfer").removeClass("btnDisable");
                        showSweetAlert(data.type, data.title, data.text, true);
                    },
                    error: function (error) {
                        $("#loadingMsg").addClass("d-none");
                        $("#btnTransfer").removeClass("btnDisable");
                        showSweetAlert("error", "Server Error", "Something went wrong. Please try again later.", true);
                    }
                });
            }
            return false;
        }

        function showSweetAlert(type, title, message, refresh = false) {
            swal({
                icon: type,
                title: title,
                text: message,
                button: "Okay",
            }).then(() => {
                if (refresh) {
                    location.reload();
                }
            });
        }
    </script>
</body>
</html>



