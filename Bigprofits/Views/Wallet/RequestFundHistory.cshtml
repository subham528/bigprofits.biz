@using System.Data
@model DataSet
@using Newtonsoft.Json;
@using Bigprofits.Common;
@{
    ViewData["Title"] = "Request Fund History";
    Layout = "~/Views/Shared/_Layout.cshtml";
    dynamic income = JsonConvert.DeserializeObject(ViewBag.SpMember)[0];

}

<div class="col-12 col-md-6 mb-3">
    <div class="card shadow-lg rounded-lg">
        <div class="card-header bg-primary text-white text-center">
            <h4 class="card-title font-semibold" style="color:green">Topup Wallet</h4>
        </div>

        <div class="card-body">
            <div class="d-flex justify-content-around text-primary">
                <!-- Total Credit -->
                <div class="text-center border p-2 rounded-lg w-1/3">
                    <p class="text-sm font-semibold">Total Credit</p>
                    <p class="text-lg font-bold">$<span>@income.AW_Credit</span></p>
                </div>

                <!-- Total Debit -->
                <div class="text-center border p-2 rounded-lg w-1/3">
                    <p class="text-sm font-semibold">Total Debit</p>
                    <p class="text-lg font-bold">$<span>@income.AW_Debit</span></p>
                </div>

                <!-- Available Balance -->
                <div class="text-center border p-2 rounded-lg w-1/3">
                    <p class="text-sm font-semibold">Available</p>
                    <p class="text-lg font-bold">$<span>@income.AW_Available</span></p>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-12 col-sm-12">
        <div class="card ">
            <div class="card-header">
                <h3 class="card-title mb-0">TRANSACTION HISTORY </h3>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="data-table" class="table table-bordered text-nowrap mb-0">
                        <thead>
                            <tr>

                                <th>
                                    Sno
                                </th>

                                <th>
                                    Reference ID
                                </th>

                                <th>
                                    Amount
                                </th>

                                <th>
                                    Txn Info
                                </th>
                                <th>
                                    Date
                                </th>
                                <th>
                                    Details
                                </th>
                                <th>
                                    Wallet
                                </th>

                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int sno2 = 1;
                            }

                            @foreach (DataRow row in Model.Tables[0].Rows)
                            {
                                <tr>
                                    <td>@sno2</td>
                                    <td>
                                        @if (row["byMemberId"] != null)
                                        {
                                            <span>
                                                @row["byMemName"].ToString() \ @row["byMemberId"].ToString()
                                            </span>
                                        }
                                    </td>

                                    <td>@("$" + Convert.ToDecimal(row["Amount"]).ToString("0.00"))</td>
                                    <td>

                                        @if (row["ftype"].ToString() == "CREDIT")
                                        {
                                            <span style="color:green">CREDIT</span>
                                        }
                                        else
                                        {
                                            <span style="color:red">DEBIT</span>
                                        }
                                    </td>
                                    @*    <td style="color:red"> @row["ftype"]</td> *@
                                    <td>@row["fdate"]</td>
                                    <td>@row["details"]</td>
                                    <td>@row["wType"] Wallet</td>


                                </tr>
                                sno2++;
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div><!-- COL END -->
</div><!-- ROW-5 END -->
