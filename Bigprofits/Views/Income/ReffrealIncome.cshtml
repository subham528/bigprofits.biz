@using System.Data
@model DataSet
@using Bigprofits.Common;
@{
    ViewData["Title"] = "Cashback Income";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-12 col-sm-12">
        <div class="card ">
            <div class="card-header">
                <h3 class="card-title mb-0"> Reward Bonus </h3>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="data-table" class="table table-bordered text-nowrap mb-0">
                        <thead>
                            <tr>

                                <th>
                                    Sno
                                </th>
                               @*  <th>
                                    Direct
                                </th>
                                <th>
                                     Self Package
                                </th>
                                <th>
                                     Team Size
                                </th>
                                <th>
                                     Team Volume
                                </th>
 *@
                                <th>
                                     Reward
                                </th>
                                <th>
                                    Rank
                                </th>
                                <th>
                                   Date
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int sno2 = 1;
                            }

                            @foreach (DataRow row in Model.Tables[0].Rows)
                            {
                                <tr>
                                    <td>@sno2</td>
                                   @*  <td>@String.Format("{0:0}", row["FinalIncome"])</td>

                                    <td>@("$" + Convert.ToDecimal(row["Tds"]).ToString("0.00"))</td>
                                    <td>@String.Format("{0:0}", row["rpcharge"])</td>
                                    
                                    <td>@("$" + Convert.ToDecimal(row["AdminCrg"]).ToString("0.00"))</td> *@
                                    <td>@("$" + Convert.ToDecimal(row["RwrdIncome"]).ToString("0.00"))</td>

                                    <td>@row["RDescription"]</td>
                                    <td>@row["RDate"]</td>
                                </tr>
                                sno2++;
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div><!-- COL END -->
</div><!-- ROW-5 END -->
