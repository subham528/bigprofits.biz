@using System.Data
@model DataSet
@using Bigprofits.Common;
@{
    ViewData["Title"] = "Level Income";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-12 col-sm-12">
        <div class="card ">
            <div class="card-header">
                <h3 class="card-title mb-0"> Direct Sponsor Income </h3>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="data-table" class="table table-bordered text-nowrap mb-0">
                        <thead>
                            <tr>

                                <th>
                                    Sno
                                </th>
                                <th>
                                    ByMember Name  / ByMember ID
                                </th>

                                <th>
                                    Package
                                </th>

                                <th>
                                    Rate
                                </th>
                                <th>
                                    Final Amount
                                </th>
                                <th>
                                    lvl
                                </th>


                                <th>
                                    Date
                                </th>

                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int sno2 = 1;
                            }

                            @foreach (DataRow row in Model.Tables[0].Rows)
                            {
                                <tr>
                                    <td>@sno2</td>
                                    <td>@row["byMemName"]/@row["bymemberid"]</td>
                                    <td>@("$" + Convert.ToDecimal(row["package"]).ToString("0.00"))</td>


                                  <td>@(Convert.ToDecimal(row["rpcharge"]).ToString("0.00") + "%")</td> 
                                    <td>@("$" + Convert.ToDecimal(row["ammount"]).ToString("0.00"))</td>

                                    <td>@row["lvlNo"]</td>

                                    <td>@row["Ddate"]</td>






                                </tr>
                                sno2++;
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div><!-- COL END -->
</div><!-- ROW-5 END -->
