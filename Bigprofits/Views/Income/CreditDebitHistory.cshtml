@using System.Data
@model DataSet
@using Bigprofits.Common;
@{
    ViewData["Title"] = "CreditDebitHistroy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="col-md-12 mb-2 innerLinkWrap">
    <div class="card innerLink">
        <a href="/account/roi-income">
            <div class="card-body p-2 text-center">
                <h6 class="text-white mb-0">ROI Income</h6>
            </div>
        </a>
    </div>

    <div class="card innerLink">
        <a href="/account/Sponsor-Income">
            <div class="card-body p-2 text-center">
                <h6 class="text-dark mb-0">Sponsor income </h6>
            </div>
        </a>
    </div>

    <div class="card innerLink ">
        <a href="/account/Level-Income">
            <div class="card-body p-2 text-center">
                <h6 class="text-dark mb-0">Level Income </h6>
            </div>
        </a>
    </div>
    <div class="card innerLink">
        <a href="/account/Salary-Income">
            <div class="card-body p-2 text-center">
                <h6 class="text-dark mb-0">Salary Income</h6>
            </div>
        </a>
    </div>

    <div class="card innerLink active ">
        <a href="/account/CreditDebit-History">
            <div class="card-body p-2 text-center">
                <h6 class="text-white mb-0">Debit History</h6>
            </div>
        </a>
    </div>
</div>



<div class="row">
    <div class="col-12 col-sm-12">
        <div class="card ">
            <div class="card-header">
                <h3 class="card-title mb-0"> CreditDebit Histroy </h3>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="data-table" class="table table-bordered text-nowrap mb-0">
                        <thead>
                            <tr>

                                <th>
                                    Sno
                                </th>
                                <th>
                                    Member Id
                                </th>

                                <th>
                                    Amount
                                </th>
                                <th>
                                    Details
                                </th>
                                <th>
                                    Date
                                </th>
                                <th>
                                    Type
                                </th>
                                <th>
                                    From
                                </th>

                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int sno2 = 1;
                            }

                            @foreach (DataRow row in Model.Tables[0].Rows)
                            {
                                <tr>
                                    <td>@sno2</td>
                                    <td>@row["memberId"]</td>
                            
                                    <td>@("$" + Convert.ToDecimal(row["Amount"]).ToString("0.00"))</td>
                                    <td>@row["details"]</td>

                                    <td>@row["fdate"]</td>
                                    <td>
                                        @if (row["ftype"].ToString() == "CREDIT")
                                        {
                                            <span style="color:green">CREDIT</span>
                                        }
                                        else
                                        {
                                            <span style="color:red">DEBIT</span>
                                        }
                                    </td>
                                    <td>@row["hashId"]</td>


                                </tr>
                                sno2++;
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div><!-- COL END -->
</div><!-- ROW-5 END -->
